rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Recipes collection - allow read for all, write for authenticated users
    match /recipes/{recipeId} {
      allow read: if true; // Public recipes can be read by anyone
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Comments collection
    match /comments/{commentId} {
      allow read: if true; // Comments are public
      allow write: if request.auth != null; // Only authenticated users can comment
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null; // Any authenticated user can read user profiles
      allow write: if request.auth != null && request.auth.uid == userId; // Users can only edit their own data
    }
    
    // Events collection
    match /events/{eventId} {
      allow read: if request.auth != null; // Authenticated users can read events
      allow write: if request.auth != null; // Authenticated users can create/edit events
    }
    
    // Conversations and messages
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null; // Authenticated users can access conversations
    }
    
    // Weekly plans
    match /weeklyPlans/{planId} {
      allow read, write: if request.auth != null; // Authenticated users can manage weekly plans
    }
    
    // Feedback
    match /feedback/{feedbackId} {
      allow read, write: if request.auth != null; // Authenticated users can provide feedback
    }
    
    // Menus
    match /menus/{menuId} {
      allow read: if true; // Public menus
      allow write: if request.auth != null; // Only authenticated users can create menus
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Translations
    match /translations/{translationId} {
      allow read: if true; // Public translations
      allow write: if request.auth != null; // Only authenticated users can contribute translations
    }
    
    // Allow all authenticated users to read/write for development
    // WARNING: This is permissive for development - tighten for production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}